    <script>
    let selectedPdfId = '';

    function showPurchaseModal(pdfId, pdfName, price) {
      selectedPdfId = pdfId;
      document.getElementById('pdfName').textContent = pdfName;
      document.getElementById('pdfPrice').textContent = price + ' جنيه';
      new bootstrap.Modal(document.getElementById('purchaseModal')).show();
    }

    document.getElementById('confirmPurchase').addEventListener('click', async function() {
      if (selectedPdfId) {
        try {
          // Show loading state
          this.disabled = true;
          this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري الشراء...';
          
          // Create purchase request
          const formData = new FormData();
          formData.append('code', prompt('أدخل كود شراء المذكرة:'));
          
          if (!formData.get('code')) {
            this.disabled = false;
            this.innerHTML = 'شراء';
            return;
          }
          
          const response = await fetch(`/student/chapter/<%= chapterId %>/pdf/${selectedPdfId}/buy`, {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (result.success) {
            alert('تم شراء المذكرة بنجاح!');
            window.location.reload();
          } else {
            alert(result.message || 'فشل في عملية الشراء');
            this.disabled = false;
            this.innerHTML = 'شراء';
          }
          
          // Hide modal
          bootstrap.Modal.getInstance(document.getElementById('purchaseModal')).hide();
        } catch (error) {
          console.error('Purchase error:', error);
          alert('حدث خطأ في عملية الشراء');
          this.disabled = false;
          this.innerHTML = 'شراء';
        }
      }
    });
    </script>
