        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Page Hero -->
            <div class="page-hero">
                <div class="container">
                    <div class="d-flex align-items-center mb-3">
                        <a href="/student/chapter/<%= chapterId %>" class="btn btn-light btn-modern me-3">
                            <i class="fas fa-arrow-right"></i>
                            العودة للباب
                    </a>
                        <div class="badge bg-primary">فيديوهات</div>
                    </div>
                    <h1 class="display-6 fw-bold mb-2"><%= chapter.chapterName %></h1>
                    <p class="lead mb-0">استكشف جميع الفيديوهات التعليمية في هذا الباب</p>
              </div>
            </div>

            <div class="container">
            <!-- Access Alert -->
            <% if (!hasChapterAccess) { %>
                <div class="access-denied">
                    <i class="fas fa-lock fa-3x text-danger mb-3"></i>
                    <h4 class="text-danger">هذا الباب غير متاح</h4>
                    <p class="text-muted mb-3">يجب شراء الباب أولاً للوصول إلى جميع فيديوهاته</p>
                    <a href="/student/chapter/<%= chapterId %>" class="btn btn-primary-modern">
                        <i class="fas fa-key"></i>
                        شراء الباب
                    </a>
            </div>
            <% } %>

              <!-- Lectures Section -->
              <% if (chapter.chapterLectures && chapter.chapterLectures.length > 0) { %>
                <div class="section-header section-lectures">
                    <h3 class="mb-0">
                        <i class="fas fa-play-circle text-primary me-2"></i>
                        الدروس الأساسية
                        <span class="badge bg-primary ms-2"><%= chapter.chapterLectures.length %></span>
                    </h3>
                  </div>
                <div class="video-grid">
                    <% chapter.chapterLectures.forEach((lecture, index) => { 
                        const videoInfo = userData.videosInfo ? userData.videosInfo.find(v => v._id.toString() === lecture._id.toString()) : null;
                        const watchesLeft = videoInfo ? Math.max(0, (videoInfo.videoAllowedAttemps || 3) - (videoInfo.numberOfWatches || 0)) : 3;
                        const hasAccess = hasChapterAccess || (userData.videosPaid && userData.videosPaid.includes(lecture._id.toString()));
                    %>
                        <div class="video-card">
                        <div class="video-thumbnail">
                            <% if (lecture.imgURL && lecture.imgURL.trim() !== '') { %>
                                <img src="<%= lecture.imgURL %>" alt="<%= lecture.lectureName || lecture.videoTitle %>" style="width: 100%; height: 100%; object-fit: cover;">
                            <% } else { %>
                                <i class="fas fa-play-circle fa-4x text-primary opacity-50"></i>
                            <% } %>
                            <div class="floating-stats">
                                <div class="stat-item">
                                    <i class="fas fa-clock"></i>
                                    <span><%= lecture.lectureDuration || '30' %>د</span>
                                </div>
                                <% if (hasAccess && videoInfo) { %>
                                <div class="stat-item">
                                    <i class="fas fa-redo"></i>
                                    <span><%= watchesLeft %></span>
                                </div>
                                <% } %>
                            </div>
                            <div class="video-overlay">
                                <% if (hasAccess) { %>
                                    <a href="/student/chapter/<%= chapterId %>/video/<%= lecture._id %>" class="btn btn-primary-modern btn-lg">
                                  <i class="fas fa-play"></i>
                                        مشاهدة الآن
                                </a>
                              <% } else { %>
                                    <button class="btn btn-warning-modern btn-lg" onclick="showPurchaseModal('<%= lecture._id %>', '<%= lecture.lectureName || lecture.videoTitle %>', '<%= lecture.lecturePrice || lecture.price || '25' %>')">
                                        <i class="fas fa-lock"></i>
                                        <%= lecture.lecturePrice || lecture.price || '25' %> جنيه
                                </button>
                              <% } %>
                            </div>
                        </div>
                        <div class="video-info">
                            <h5 class="video-title"><%= lecture.lectureName || lecture.videoTitle %></h5>
                            <div class="video-meta">
                                <div class="d-flex gap-2">
                                    <div class="meta-item">
                                        <i class="fas fa-eye"></i>
                                        <span><%= lecture.views || 0 %></span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-calendar"></i>
                                        <span>الدرس <%= index + 1 %></span>
                                    </div>
                                </div>
                                <% if (lecture.paymentStatus === 'Free') { %>
                                <span class="status-badge status-free">مجاني</span>
                                <% } else if (hasAccess) { %>
                                <span class="status-badge status-owned">مملوك</span>
                                <% } else { %>
                                <span class="status-badge status-paid"><%= lecture.lecturePrice || lecture.price || '25' %> جنيه</span>
                                <% } %>
                            </div>
                            <div class="video-actions">
                                <% if (hasAccess) { %>
                                    <% if (watchesLeft<=0) { %>
                                    
                                        <div class="text-success small">
                                        <i class="fas fa-check-circle"></i>
                                        تم المشاهدة
                                    </div>
                                    <% } else { %>
                                   <a href="/student/chapter/<%= chapterId %>/video/<%= solving._id %>" class="btn btn-warning-modern flex-fill">
                                        <i class="fas fa-play"></i>
                                        مشاهدة
                                    </a>
                                    <% } %>
                                <% } else { %>
                                    <button class="btn btn-outline-modern flex-fill" onclick="showPurchaseModal('<%= lecture._id %>', '<%= lecture.lectureName || lecture.videoTitle %>', '<%= lecture.lecturePrice || lecture.price || '25' %>')">
                                        <i class="fas fa-shopping-cart"></i>
                                        شراء الفيديو
                                    </button>
                                <% } %>
                          </div>
                        </div>
                      </div>
                      <% }); %>
              </div>
              <% } %>

              <!-- Summaries Section -->
              <% if (chapter.chapterSummaries && chapter.chapterSummaries.length > 0) { %>
                <div class="section-header section-summaries">
                    <h3 class="mb-0">
                        <i class="fas fa-bookmark text-success me-2"></i>
                        الملخصات والمراجعات
                        <span class="badge bg-success ms-2"><%= chapter.chapterSummaries.length %></span>
                    </h3>
                  </div>
                <div class="video-grid">
                    <% chapter.chapterSummaries.forEach((summary, index) => { 
                        const videoInfo = userData.videosInfo ? userData.videosInfo.find(v => v._id.toString() === summary._id.toString()) : null;
                        const watchesLeft = videoInfo ? Math.max(0, (videoInfo.videoAllowedAttemps || 3) - (videoInfo.numberOfWatches || 0)) : 3;
                        const hasAccess = hasChapterAccess || (userData.videosPaid && userData.videosPaid.includes(summary._id.toString()));
                    %>
                        <div class="video-card">
                        <div class="video-thumbnail">
