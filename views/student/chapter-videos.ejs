                                <img src="<%= summary.imgURL %>" alt="<%= summary.lectureName || summary.videoTitle %>" style="width: 100%; height: 100%; object-fit: cover;">
                            <% } else { %>
                                <i class="fas fa-bookmark fa-4x text-success opacity-50"></i>
                            <% } %>
                            <div class="floating-stats">
                                <div class="stat-item">
                                    <i class="fas fa-clock"></i>
                                    <span><%= summary.lectureDuration || '20' %>د</span>
                                </div>
                                <% if (hasAccess && videoInfo) { %>
                                <div class="stat-item">
                                    <i class="fas fa-redo"></i>
                                    <span><%= watchesLeft %></span>
                                </div>
                                <% } %>
                            </div>
                            <div class="video-overlay">
                                <% if (hasAccess) { %>
                                    <a href="/student/chapter/<%= chapterId %>/video/<%= summary._id %>" class="btn btn-success-modern btn-lg">
                                  <i class="fas fa-play"></i>
                                        مشاهدة الآن
                                </a>
                              <% } else { %>
                                    <button class="btn btn-warning-modern btn-lg" onclick="showPurchaseModal('<%= summary._id %>', '<%= summary.lectureName || summary.videoTitle %>', '<%= summary.lecturePrice || summary.price || '15' %>')">
                                        <i class="fas fa-lock"></i>
                                        <%= summary.lecturePrice || summary.price || '15' %> جنيه
                                </button>
                              <% } %>
                            </div>
                        </div>
                        <div class="video-info">
                            <h5 class="video-title"><%= summary.lectureName || summary.videoTitle %></h5>
                            <div class="video-meta">
                                <div class="d-flex gap-2">
                                    <div class="meta-item">
                                        <i class="fas fa-eye"></i>
                                        <span><%= summary.views || 0 %></span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-bookmark"></i>
                                        <span>المراجعة <%= index + 1 %></span>
                                    </div>
                                </div>
                                <% if (summary.paymentStatus === 'Free') { %>
                                <span class="status-badge status-free">مجاني</span>
                                <% } else if (hasAccess) { %>
                                <span class="status-badge status-owned">مملوك</span>
                                <% } else { %>
                                <span class="status-badge status-paid"><%= summary.lecturePrice || summary.price || '15' %> جنيه</span>
                                <% } %>
                            </div>
                            <div class="video-actions">
                                <% if (hasAccess) { %>
                                    <% if (watchesLeft<=0) { %>
                                    
                                        <div class="text-success small">
                                        <i class="fas fa-check-circle"></i>
                                        تم المشاهدة
                                    </div>
                                    <% } else { %>
                                   <a href="/student/chapter/<%= chapterId %>/video/<%= solving._id %>" class="btn btn-warning-modern flex-fill">
                                        <i class="fas fa-play"></i>
                                        مشاهدة
                                    </a>
                                    <% } %>
                                <% } else { %>
                                    <button class="btn btn-outline-modern flex-fill" onclick="showPurchaseModal('<%= summary._id %>', '<%= summary.lectureName || summary.videoTitle %>', '<%= summary.lecturePrice || summary.price || '15' %>')">
                                        <i class="fas fa-shopping-cart"></i>
                                        شراء الفيديو
                                    </button>
                                <% } %>
                          </div>
                        </div>
                      </div>
                      <% }); %>
              </div>
              <% } %>

              <!-- Solvings Section -->
              <% if (chapter.chapterSolvings && chapter.chapterSolvings.length > 0) { %>
                <div class="section-header section-solvings">
                    <h3 class="mb-0">
                        <i class="fas fa-calculator text-warning me-2"></i>
                        الحلول والتطبيقات
                        <span class="badge bg-warning ms-2"><%= chapter.chapterSolvings.length %></span>
                    </h3>
                  </div>
                <div class="video-grid">
                    <% chapter.chapterSolvings.forEach((solving, index) => { 
                        const videoInfo = userData.videosInfo ? userData.videosInfo.find(v => v._id.toString() === solving._id.toString()) : null;
                        const watchesLeft = videoInfo ? Math.max(0, (videoInfo.videoAllowedAttemps || 3) - (videoInfo.numberOfWatches || 0)) : 3;
                        const hasAccess = hasChapterAccess || (userData.videosPaid && userData.videosPaid.includes(solving._id.toString()));
                    %>
                        <div class="video-card">
                        <div class="video-thumbnail">
                            <% if (solving.imgURL && solving.imgURL.trim() !== '') { %>
                                <img src="<%= solving.imgURL %>" alt="<%= solving.lectureName || solving.videoTitle %>" style="width: 100%; height: 100%; object-fit: cover;">
                            <% } else { %>
                                <i class="fas fa-calculator fa-4x text-warning opacity-50"></i>
                            <% } %>
                            <div class="floating-stats">
                                <div class="stat-item">
                                    <i class="fas fa-clock"></i>
                                    <span><%= solving.lectureDuration || '35' %>د</span>
                                </div>
                                <% if (hasAccess && videoInfo) { %>
                                <div class="stat-item">
                                    <i class="fas fa-redo"></i>
                                    <span><%= watchesLeft %></span>
                                </div>
                                <% } %>
                            </div>
                            <div class="video-overlay">
                                <% if (hasAccess) { %>
                                    <a href="/student/chapter/<%= chapterId %>/video/<%= solving._id %>" class="btn btn-warning-modern btn-lg">
                                  <i class="fas fa-play"></i>
                                        مشاهدة الآن
                                </a>
                              <% } else { %>
                                    <button class="btn btn-warning-modern btn-lg" onclick="showPurchaseModal('<%= solving._id %>', '<%= solving.lectureName || solving.videoTitle %>', '<%= solving.lecturePrice || solving.price || '20' %>')">
                                        <i class="fas fa-lock"></i>
                                        <%= solving.lecturePrice || solving.price || '20' %> جنيه
                                </button>
                              <% } %>
                            </div>
                        </div>
                        <div class="video-info">
                            <h5 class="video-title"><%= solving.lectureName || solving.videoTitle %></h5>
                            <div class="video-meta">
                                <div class="d-flex gap-2">
                                    <div class="meta-item">
                                        <i class="fas fa-eye"></i>
                                        <span><%= solving.views || 0 %></span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="fas fa-calculator"></i>
                                        <span>الحل <%= index + 1 %></span>
                                    </div>
                                </div>
                                <% if (solving.paymentStatus === 'Free') { %>
                                <span class="status-badge status-free">مجاني</span>
                                <% } else if (hasAccess) { %>
                                <span class="status-badge status-owned">مملوك</span>
                                <% } else { %>
                                <span class="status-badge status-paid"><%= solving.lecturePrice || solving.price || '20' %> جنيه</span>
                                <% } %>
                            </div>
                            <div class="video-actions">
                                <% if (hasAccess) { %>
                                    <% if (watchesLeft<=0) { %>
                                    
                                        <div class="text-success small">
                                        <i class="fas fa-check-circle"></i>
                                        تم المشاهدة
                                    </div>
                                    <% } else { %>
                                   <a href="/student/chapter/<%= chapterId %>/video/<%= solving._id %>" class="btn btn-warning-modern flex-fill">
                                        <i class="fas fa-play"></i>
                                        مشاهدة
                                    </a>
                                    <% } %>
                                <% } else { %>
                                    <button class="btn btn-outline-modern flex-fill" onclick="showPurchaseModal('<%= solving._id %>', '<%= solving.lectureName || solving.videoTitle %>', '<%= solving.lecturePrice || solving.price || '20' %>')">
                                        <i class="fas fa-shopping-cart"></i>
                                        شراء الفيديو
                                    </button>
                                <% } %>
                          </div>
                        </div>
                      </div>
                      <% }); %>
              </div>
              <% } %>

              <!-- No Videos Message -->
              <% if ((!chapter.chapterLectures || chapter.chapterLectures.length === 0) && 
                     (!chapter.chapterSummaries || chapter.chapterSummaries.length === 0) && 
                     (!chapter.chapterSolvings || chapter.chapterSolvings.length === 0)) { %>
                <div class="text-center py-5">
                    <i class="fas fa-video fa-4x text-muted mb-4"></i>
                  <h4 class="text-muted">لا توجد فيديوهات متاحة حالياً</h4>
                  <p class="text-muted">سيتم إضافة المحتوى قريباً</p>
              </div>
              <% } %>
            </div>
          </main>
    </div>

    <!-- Purchase Modal -->
    <div class="modal fade" id="purchaseModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">شراء الفيديو</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center">
                    <i class="fas fa-video fa-3x text-primary mb-3"></i>
            <h5 id="videoName"></h5>
            <p class="text-muted">هل تريد شراء هذا الفيديو؟</p>
                    <div class="h4 text-primary" id="videoPrice"></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
            <button type="button" class="btn btn-primary" id="confirmPurchase">شراء</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" onclick="toggleSidebar()" style="display: none;">
        <i class="fas fa-bars"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    let selectedVideoId = '';

    function showPurchaseModal(videoId, videoName, price) {
      selectedVideoId = videoId;
      document.getElementById('videoName').textContent = videoName;
      document.getElementById('videoPrice').textContent = price + ' جنيه';
      new bootstrap.Modal(document.getElementById('purchaseModal')).show();
    }

    document.getElementById('confirmPurchase').addEventListener('click', function() {
      if (selectedVideoId) {
        // Create form and submit
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/student/chapter/<%= chapterId %>/video/${selectedVideoId}/buy`;
        document.body.appendChild(form);
        form.submit();
      }
    });

        // Mobile sidebar toggle
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
        }

        // Mobile responsive handling
        function handleResize() {
            if (window.innerWidth <= 1024) {
                document.querySelector('.mobile-menu-toggle').style.display = 'block';
            } else {
                document.querySelector('.mobile-menu-toggle').style.display = 'none';
                document.querySelector('.sidebar').classList.remove('open');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize();

        // Close sidebar on mobile when clicking outside
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.querySelector('.mobile-menu-toggle');
            
            if (window.innerWidth <= 1024 && 
                !sidebar.contains(event.target) && 
                !toggleBtn.contains(event.target) &&
                sidebar.classList.contains('open')) {
                sidebar.classList.remove('open');
      }
    });
    </script>
  </body>
</html> 